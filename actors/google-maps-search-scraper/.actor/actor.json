{
  "actorSpecification": 1,
  "name": "google-maps-search-scraper",
  "title": "Google Maps Search",
  "description": "Search for businesses on Google Maps at scale. Find restaurants, services, shops, and more with detailed information including ratings, reviews, hours, and contact details.",
  "version": "1.0",
  "buildTag": "latest",
  "icon": "üîç",
  "meta": { "templateId": "ts-start" },
  "input": "./input_schema.json",
  "dockerfile": "./Dockerfile",
  "environmentVariables": { "SCRAPPA_API_KEY": "@SCRAPPA_API_KEY" },
  "resources": {
    "memoryMbytes": 256
  },
  "storages": {
    "dataset": {
      "actorSpecification": 1,
      "views": {
        "overview": {
          "title": "Search Results",
          "transformation": { "fields": ["name", "rating", "review_count", "address", "phone", "website", "type"] },
          "display": {
            "component": "table",
            "properties": {
              "name": { "label": "Name", "format": "text" },
              "rating": { "label": "Rating", "format": "number" },
              "review_count": { "label": "Reviews", "format": "number" },
              "address": { "label": "Address", "format": "text" },
              "phone": { "label": "Phone", "format": "text" },
              "website": { "label": "Website", "format": "link" },
              "type": { "label": "Type", "format": "text" }
            }
          }
        }
      }
    }
  }
}
